<p id="notice"><%= notice %></p>

<h1>Posts</h1>


<div class="row">
  <!-- Blog Post Content Column -->
  <div class="col-lg-8">

    <% @posts.each do |post| %>
    <!-- Blog Post -->
    <!-- Title -->
    <h1><%= link_to_unless_current post.title, post %></h1>
    <span class="glyphicon glyphicon-time"></span> Posted: <%= distance_of_time_in_words_to_now(post.created_at) %> ago
    <p class="lead"><%= simple_format post.body %></p>

    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>

    <!-- Posted Comments -->
    <div id="posted-comments">
      <h3>Comments:</h3>

      <%= render :partial => post.comments.first(3) %>
    </div>


    <% end %>

    <%= link_to 'New Post', new_post_path %>
  </div>


  <!-- Blog Sidebar Widgets Column -->
  <div class="col-md-4">

    <!-- Side Widget Well -->
    <div class="well">
      <h4>About this blog:</h4>
      <p>This is a test site for Gfresh</p>

    </div>
  </div>

</div>
