<!-- <%= render :partial => @post %> -->
<div class="row">
  <!-- Blog Post Content Column -->
  <div class="col-lg-8">
    <!-- Blog Post -->
    <!-- Title -->
    <h1><%= link_to_unless_current @post.title, @post %></h1>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>

    <hr>

    <!-- Date/Time -->
    <p><span class="glyphicon glyphicon-time"></span> Posted: <%= distance_of_time_in_words_to_now(@post.created_at) %> ago</p>

    <hr>


    <!-- Post Content -->
    <p class="lead"><%= simple_format @post.body %>
      <hr>

      <!-- Blog Comments -->

      <!-- Comments Form -->
      <div class="well">
        <%= form_for [@post, Comment.new], :remote => true do |f| %>

        <h4>Leave a Comment:</h4>

          <div class="form-group">
            <%= f.label :user, "User" %><br/>
            <%= f.text_field :user %><br/>
            <%= f.label :body, "Comment" %><br/>
            <%= f.text_area :body, :rows => 3, :class => "form-control"  %>
          </div>
          <p><%= f.submit "Add comment" ,:class => "btn btn-primary"%></p>

    

        <% end %>
      </div>


      <hr>
      <!-- Posted Comments -->
      <div id="posted-comments">
        <%= render :partial => @post.comments %>
      </div>

    </div>

    <!-- Blog Sidebar Widgets Column -->
    <div class="col-md-4">

      <!-- Side Widget Well -->
      <div class="well">
        <h4>Post Tags</h4>
        <p><%= @post.all_tags %></p>

        </div>

    </div>

  </div>
  <!-- /.row -->
